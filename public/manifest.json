  "share_target": {
    "action": "/api/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "image/png", "image/jpeg", "image/webp", "image/gif"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".webp", ".gif", ".svg", ".avif"],
        "application/json": [".json"],
        "text/plain": [".txt"],
        "application/pdf": [".pdf"]
      }
    },
    {
      "action": "/render",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      },
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+renderiq",
      "url": "/open?url=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
