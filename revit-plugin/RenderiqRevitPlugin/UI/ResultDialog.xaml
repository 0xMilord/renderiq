<Window x:Class="RenderiqRevitPlugin.UI.ResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Render Complete" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Render Complete" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusTextBlock" 
                       Text="Your render is ready!" 
                       Foreground="Green"/>
        </StackPanel>

        <!-- Image Display -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Margin="0,0,0,20">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Auto">
                <Image x:Name="ResultImage" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Open in Browser" 
                    Width="140" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="OpenBrowserButton_Click"/>
            <Button Content="Copy Link" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CopyLinkButton_Click"/>
            <Button Content="Save As..." 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="SaveAsButton_Click"/>
            <Button Content="Close" 
                    Width="100" 
                    Height="30"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

