<Window x:Class="RenderiqRevitPlugin.UI.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renderiq Sign In" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Sign In to Renderiq" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Email:" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" 
                     Height="30" 
                     Margin="0,0,0,20"/>

            <TextBlock Text="Password:" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Height="30" 
                         Margin="0,0,0,20"/>

            <CheckBox x:Name="RememberMeCheckBox" 
                      Content="Remember me" 
                      Margin="0,0,0,20"/>

            <TextBlock x:Name="ErrorTextBlock" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Margin="0,0,0,10"/>

            <TextBlock>
                <Hyperlink NavigateUri="https://renderiq.io/signup" 
                           RequestNavigate="SignUpLink_RequestNavigate">
                    Don't have an account? Sign up
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Sign In" 
                    Width="100" 
                    Height="30"
                    Click="SignInButton_Click"
                    IsDefault="True"/>
        </StackPanel>

        <!-- Progress Overlay -->
        <Grid x:Name="ProgressOverlay" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="30"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Signing in..." 
                               FontSize="16" 
                               HorizontalAlignment="Center"/>
                    <ProgressBar Width="200" 
                                 Height="20" 
                                 IsIndeterminate="True" 
                                 Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

