<Window x:Class="RenderiqAutoCADPlugin.UI.ProjectsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renderiq Projects" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Your Projects" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Select a project to use for renders" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Projects List -->
        <GroupBox Grid.Row="1" Header="Projects" Margin="0,0,0,20">
            <Grid>
                <ListBox x:Name="ProjectsListBox" 
                         SelectionMode="Single"
                         SelectionChanged="ProjectsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="15"
                                    Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="Gray"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding RenderCount}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text=" renders" 
                                                       Margin="5,0,0,0"
                                                       Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Grid.Column="1" 
                                            Content="Select" 
                                            Width="80" 
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Click="SelectProjectButton_Click"
                                            Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="New Project" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="NewProjectButton_Click"/>
            <Button Content="Refresh" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="RefreshButton_Click"/>
            <Button Content="Close" 
                    Width="100" 
                    Height="30"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="30"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Loading projects..." 
                               FontSize="16" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <ProgressBar Width="200" 
                                 Height="20" 
                                 IsIndeterminate="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

