<Window x:Class="RenderiqAutoCADPlugin.UI.CreditsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renderiq Credits" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Your Credits" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Balance Display -->
            <Border BorderBrush="#27ae60" 
                    BorderThickness="2" 
                    CornerRadius="5" 
                    Padding="20"
                    Background="#f0f9f4"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Available Balance" 
                               FontSize="12" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="BalanceTextBlock" 
                               Text="150" 
                               FontSize="48" 
                               FontWeight="Bold"
                               Foreground="#27ae60"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Stats -->
            <GroupBox Header="Statistics" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total Earned:"/>
                        <TextBlock x:Name="TotalEarnedTextBlock" 
                                   Grid.Column="1" 
                                   Text="500" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total Spent:"/>
                        <TextBlock x:Name="TotalSpentTextBlock" 
                                   Grid.Column="1" 
                                   Text="350" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Warning (if low) -->
            <Border x:Name="LowCreditsWarning" 
                    Background="#fff3cd" 
                    BorderBrush="#ffc107" 
                    BorderThickness="1"
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <TextBlock Text="⚠️ Low credits! Consider topping up." 
                           Foreground="#856404"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <Button Content="Top Up Credits" 
                        Width="120" 
                        Height="30" 
                        Margin="0,0,10,0"
                        Click="TopUpButton_Click"/>
                <Button Content="Refresh" 
                        Width="100" 
                        Height="30" 
                        Margin="0,0,10,0"
                        Click="RefreshButton_Click"/>
                <Button Content="Close" 
                        Width="100" 
                        Height="30"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Background="#80000000" 
              Visibility="Collapsed">
            <ProgressBar Width="200" 
                         Height="20" 
                         IsIndeterminate="True"
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>

