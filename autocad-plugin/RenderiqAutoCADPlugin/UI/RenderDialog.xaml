<Window x:Class="RenderiqAutoCADPlugin.UI.RenderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Render with Renderiq" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Render Current View" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Preview Section -->
        <GroupBox Grid.Row="1" Header="Preview" Margin="0,0,0,20">
            <Grid>
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Background="White"
                        Height="200">
                    <Image x:Name="PreviewImage" 
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Settings Section -->
        <GroupBox Grid.Row="2" Header="Render Settings" Margin="0,0,0,20">
            <StackPanel>
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Quality:" 
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="QualityComboBox" 
                              Grid.Column="1" 
                              SelectedIndex="1">
                        <ComboBoxItem Content="Standard (5 credits)"/>
                        <ComboBoxItem Content="High (10 credits)"/>
                        <ComboBoxItem Content="Ultra (15 credits)"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Style:" 
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="StyleComboBox" 
                              Grid.Column="1" 
                              SelectedIndex="0">
                        <ComboBoxItem Content="Photorealistic"/>
                        <ComboBoxItem Content="Dramatic"/>
                        <ComboBoxItem Content="Soft"/>
                        <ComboBoxItem Content="Studio"/>
                        <ComboBoxItem Content="Natural"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Aspect Ratio:" 
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="AspectRatioComboBox" 
                              Grid.Column="1" 
                              SelectedIndex="0">
                        <ComboBoxItem Content="16:9"/>
                        <ComboBoxItem Content="4:3"/>
                        <ComboBoxItem Content="1:1"/>
                        <ComboBoxItem Content="9:16"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Credits:" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="CreditsTextBlock" 
                               Grid.Column="1" 
                               Text="10" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="ðŸŽ¨ Render" 
                    Width="120" 
                    Height="30"
                    Click="RenderButton_Click"
                    IsDefault="True"/>
        </StackPanel>

        <!-- Progress Overlay -->
        <Grid x:Name="ProgressOverlay" 
              Grid.RowSpan="4" 
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="30"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Rendering..." 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="300" 
                                 Height="20" 
                                 IsIndeterminate="True"
                                 Margin="0,0,0,10"/>
                    <TextBlock x:Name="ProgressText" 
                               Text="Processing..." 
                               HorizontalAlignment="Center"/>
                    <Button Content="Cancel" 
                            Width="100" 
                            Height="30" 
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Click="CancelRenderButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
